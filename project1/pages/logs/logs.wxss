@import "../../template/invi_msg.wxss";

.background{
  background-color: rgb(121, 158, 202);
  padding: 3%;
}

.site{
  text-align: center;
  color: rgb(54, 182, 195);
  font-size: 36rpx;
}
.site button{
  width: 30%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  display: inline-block;
}

.whole_container {
  box-sizing: border-box;
  width: 100%;
  padding: 10rpx;
  background-color: white;
  border-radius: 20rpx;
}

.selectBox {
  width: 100%;
  border: 1rpx solid black;
}

.ts_tabSwiper {
  width: 100%;
}

.ts_tab {
  width: 47%;
  display: inline-block;
  text-align: center;
  font-size: 33rpx;
  color: grey;
}

#ts_tabBorer {
  color: rgb(54, 182, 195);
}

.ts_list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.ts_item {
  margin: 10rpx 3.5%;
  border-radius: 20rpx;
  width: 25%;
  display: inline-block;
  border: 1rpx solid grey;
  text-align: center;
  font-size: 33rpx;
}


.grey{
  color: grey;
}


.ts_swiper {
  height: 150rpx;
}

