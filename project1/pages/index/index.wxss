/**index.wxss**/
.container{
  width: 90%;
  margin: auto;
  position: relative;
}

.userinfo {
  width: 100%;
}

#user{
  height: 400rpx;
  width: 100%;
  background-color:rgb(121, 158, 202);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 30rpx;
  margin-top: -100rpx;
  border-radius: 50rpx;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 50rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: whitesmoke;
  font-weight: bold;
}

#choose-container{
  margin-top: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  color: whitesmoke;
  font-size: 40rpx;
}

.choose{
  width: 30%;
  height: 200rpx;
  background-color: rgb(121, 158, 202);
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.choose image{
  width: 140rpx;
  height: 140rpx;
  margin: 10rpx 0;
  position: relative;
  left: 5rpx;
}

.choose text{
  font-size: 30rpx;
  /*font-weight: bold;*/
}

.song{
  font-family: '宋体';
  font-weight: bold;
}

.box_shadow{
  box-shadow: 10rpx 10rpx 20rpx grey;
}

.start_img{
  width:100%;
  height: 100%;
  position: absolute;
  z-index: 1;
}

.start_button{
  width: 100%;
  height: 100%;
  line-height: 600rpx;
  background-color: rgba(0, 0, 0, 0);
  z-index: 2;
  font-size: 60rpx;
  color: white;
}

.start_container{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 2;
}